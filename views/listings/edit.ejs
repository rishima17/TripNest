<% layout ("/layouts/boilerplate") -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h2>Edit Listing</h2>

      <!-- Form should target PUT route -->
      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input  
            name="listing[title]"  
            type="text" 
            value="<%= listing.title %>" 
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks good!</div>
        </div> 

        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea  
            name="listing[description]"  
            class="form-control"  
            required><%= listing.description %></textarea>
          <div class="invalid-feedback">Description should be shorter!</div>
        </div>  

        <!-- Image -->
        <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input name="image" type="file" class="form-control"/>
          <% if (listing.image && listing.image.url) { %>
            <small>Current: <img src="<%= listing.image.url %>" alt="Listing Image" style="height:60px; border-radius:5px;"></small>
          <% } %>
        </div>

        <!-- Price & Country -->
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input  
              name="listing[price]" 
              class="form-control"  
              value="<%= listing.price %>" 
              required
            />
            <div class="invalid-feedback">Please enter a valid price!</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input  
              name="listing[country]" 
              class="form-control"
              type="text" 
              value="<%= listing.country %>" 
              required
            />
            <div class="invalid-feedback">Country name should be valid!</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input  
            name="listing[location]" 
            class="form-control" 
            type="text"
            value="<%= listing.location %>"  
            required
          />
          <div class="invalid-feedback">Location should be valid!</div>
        </div>

        <!-- ⭐ Category -->
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" id="category" class="form-control" required>
            <option value="">-- Select a Category --</option>
            <option value="Trending" <%= listing.category === "Trending" ? "selected" : "" %>>Trending</option>
            <option value="Rooms" <%= listing.category === "Rooms" ? "selected" : "" %>>Rooms</option>
            <option value="Iconic Cities" <%= listing.category === "Iconic Cities" ? "selected" : "" %>>Iconic Cities</option>
            <option value="Mountains" <%= listing.category === "Mountains" ? "selected" : "" %>>Mountains</option>
            <option value="Amazing Pools" <%= listing.category === "Amazing Pools" ? "selected" : "" %>>Amazing Pools</option>
            <option value="Castles" <%= listing.category === "Castles" ? "selected" : "" %>>Castles</option>
            <option value="Camping" <%= listing.category === "Camping" ? "selected" : "" %>>Camping</option>
            <option value="Farms" <%= listing.category === "Farms" ? "selected" : "" %>>Farms</option>
            <option value="Arctic" <%= listing.category === "Arctic" ? "selected" : "" %>>Arctic</option>
          </select>
          <div class="invalid-feedback">Please select a category!</div>
        </div>

        <br>
        <button class="btn btn-dark">Update</button>
        <br><br>
      </form>
    </div>
  </div>
</body>
