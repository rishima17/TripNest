<% layout ("/layouts/boilerplate")-%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Edit Your Listing</h2>
    
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
<div  class="mb-3">
    <lable for="title" class="form-lable">Title</lable>
    <input  name="listing[title]" value="<%=listing.title%>" type="text" class="form-control" required/>
    <div class="valid-feedback">Title looks good!</div>

    </div>
    <div  class="mb-3">
    <lable for="desciption" class="form-lable">Description</lable>
<textarea  name="listing[description]"  type="text" class="form-control" required><%=listing.description%>
</textarea>
<div class="invalid-feedback">Description should be shorter!</div>
   </div>
   <div  class="mb-3">
    Orginal Image <br>
   <img src="<%=originalImageUrl%>" style="height: 300px; width: 50%; object-fit: cover;"/>
   </div>
   <div  class="mb-3">
    <lable for="image" class="form-lable">Upload Listing Image </lable>
    <input  name="listing[image]"  type="file" class="form-control" />
    </div>
    <div class="row">
    <div  class="mb-3 col-md-4">
    <lable for="price" class="form-lable">Price</lable>
    <input  name="listing[price]" value="<%=listing.price%>"" type="number" class="form-control" required/>
     <div class="invalid-feedback">Please enter a valid price!</div>
    </div>
     <div  class="mb-3 col-md-8">
    <lable for="country" class="form-lable">Country</lable>

    <input  name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required/>
     <div class="invalid-feedback">Country name should be valid!</div>
   </div>
</div>
 <div  class="mb-3">
    <lable for="location" class="form-lable">Location</lable>
    <input  name="listing[location]" value="<%=listing.location%>" type="text" class="location" class="form-control" required/>
    <div class="invalid-feedback">Location should be valid!</div>

    </div>
   
    <button class="btn dark-btn edit-btn mt-3">Edit</button>
</form>
</div>
</div>
</body>
